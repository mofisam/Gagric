# Enable rewrite engine
RewriteEngine On

# =========================
# PREVENT DIRECTORY LISTING (Fixes your main concern)
# =========================
Options -Indexes

# =========================
# Security Headers
# =========================
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "DENY"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# =========================
# Block access to hidden files (e.g. .env, .git, .htaccess)
# =========================
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# =========================
# Block access to sensitive files
# =========================
<FilesMatch "^(config\.php|db\.php|database\.php|\.env|composer\.json|package\.json|README\.md|CHANGELOG\.md)$">
    Require all denied
</FilesMatch>

# =========================
# Block access to backup files and logs
# =========================
<FilesMatch "\.(bak|backup|log|sql|old|swp|~|tmp|temp)$">
    Require all denied
</FilesMatch>

# =========================
# Protect include directories from direct access
# =========================
RewriteRule ^(includes|vendor|logs|temp|cache|uploads)/(.*)$ - [F,L]

# =========================
# PHP files handling
# =========================
<FilesMatch "\.php$">
    Require all granted
</FilesMatch>

# =========================
# Force HTTPS (uncomment after SSL is working)
# =========================
# RewriteCond %{HTTPS} !=on
# RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# =========================
# Pretty URLs (remove .php extension)
# =========================
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+)$ $1.php [L]

# =========================
# API routing
# =========================
RewriteRule ^api/(.*)$ api/$1 [L,QSA]

# =========================
# Custom error pages
# =========================
ErrorDocument 400 /400.php
ErrorDocument 401 /401.php
ErrorDocument 403 /403.php
ErrorDocument 404 /404.php
ErrorDocument 500 /500.php
ErrorDocument 503 /503.php

# =========================
# Compression
# =========================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# =========================
# Browser Caching
# =========================
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Default expiration
    ExpiresDefault "access plus 2 days"
    
    # Images
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS, JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    
    # Fonts
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    
    # PDF
    ExpiresByType application/pdf "access plus 1 month"
</IfModule>

# =========================
# Disable server signature
# =========================
ServerSignature Off

# =========================
# Limit file upload size (optional - uncomment if needed)
# =========================
# php_value upload_max_filesize 10M
# php_value post_max_size 10M
# php_value max_execution_time 300
# php_value max_input_time 300

# =========================
# Prevent hotlinking (optional - uncomment and update domain)
# =========================
# RewriteCond %{HTTP_REFERER} !^$
# RewriteCond %{HTTP_REFERER} !^http(s)?://(www\.)?yourdomain\.com [NC]
# RewriteRule \.(jpg|jpeg|png|gif|webp|svg)$ - [F,L]

# =========================
# Block access to XML-RPC (WordPress protection)
# =========================
<Files xmlrpc.php>
    Require all denied
</Files>

# =========================
# Protect wp-config if using WordPress
# =========================
<Files wp-config.php>
    Require all denied
</Files>

# =========================
# Directory-specific protections
# =========================
<IfModule mod_autoindex.c>
    # Disable directory indexes
    Options -Indexes
</IfModule>

# =========================
# Character set
# =========================
AddDefaultCharset UTF-8

# =========================
# MIME types
# =========================
<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType text/css .css
    AddType image/webp .webp
</IfModule>